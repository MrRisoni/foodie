<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
         <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name="connection.pool_size">100</property>

        <mapping class="models.City"/>
        <mapping class="models.CreditCard"/>
        <mapping class="models.Cuisine"/>
        <mapping class="models.Donation"/>
        <mapping class="models.DonationCategory"/>
        <mapping class="models.Food"/>
        <mapping class="models.FoodPart"/>
        <mapping class="models.Ingredient"/>
        <mapping class="models.Menu"/>
        <mapping class="models.Order"/>
        <mapping class="models.OrderDonation"/>
        <mapping class="models.OrderItem"/>
        <mapping class="models.OrderItemIngredient"/>
        <mapping class="models.PaymentMethod"/>
        <mapping class="models.Perfecture"/>
        <mapping class="models.RatingCriteria"/>
        <mapping class="models.Restaurant"/>
        <mapping class="models.Review"/>
        <mapping class="models.ReviewRating"/>
        <mapping class="models.Shop"/>
        <mapping class="models.Suburb"/>
        <mapping class="models.User"/>
        <mapping class="models.UserAddress"/>


    </session-factory>
</hibernate-configuration>